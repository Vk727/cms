<div class="row justify-content-center">

    <!--Post Content Column -->
    <div class="col-lg-5">

        <!--Title -->
        <h1 class="mt-4">{{post.title}}</h1>

        <!-- Author-->
        <p class="lead">by <a href="#">{{post.user.firstName}}</a></p>


        <hr>

        <!--Date/Time-->
        <p>Posted on {{post.date}}</p>

        <hr>


        <!-- Preview Image -->

        <img class="img-fluid rounded" src="/uploads/{{post.file}}" alt="">

        <hr>

        <!-- Post Content -->
        <p class="lead">
            {{post.body}}
        </p>

        <hr>


        {{#if user}}

            {{#if post.allowComments}}

            <!-- Comment Form -->
            <div class="card my-4">
                <h5 class="card-header">Leave a Comment:</h5>
                <div class="card-body">
                    <form action="/route-comments" method="post">
                        <div class="form-group">
                            <textarea name="body" class="form-control" rows="3"></textarea>

                            <input type="hidden" name="id" value="{{post.id}}">

                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>
            </div>

            {{else}}

                <h2>Comments not allowed</h2>
                <hr>

            {{/if}}

        {{else}}

            Login to comment <a href="/login">Login</a>
            <br>
            <hr>

        {{/if}}




        <!-- Comment Form -->

        {{#each post.comments}}

        <!-- Single Comment -->
        <div class="media mb-4">
            <img class="d-flex mr-3 rounded circle" src="#" alt="#">
            <div class="media-body">
                <h5 class="mt-0">{{user.firstName}}</h5>
                    {{body}}
            </div>
        </div>

        {{/each}}

