<div class="row justify-content-center">

    <!-- Blog Enteries Column -->
    <div class="col-lg-6 ">

        <h1 class="my-4">Home</h1>

        {{#each posts}}

        <!-- Blog Posts -->
        <div class="card mb-4">
            <img class="card-img-top" height="300px" src="/uploads/{{file}}" alt="image   cap">
            <div class="card-body">
                <h2 class="card-title">{{title}}</h2>
                <p class="card-text">{{body}}</p>
                <a href="/post/{{slug}}" class="btn btn-primary">Read More &rarr;</a>
            </div>
            <div class="card-footer text-muted">
                Posted on {{generateDate date "MMMM Do YYYY"}} by <a href="#">Configure it</a>
            </div>
        </div>

        {{/each}}


        <!-- Pagination -->

        <ul class="pagination justify-content-center mb-4">

            {{#paginate current = current pages = pages}}
            {{/paginate}}

            {{!-- <li class="page-item">
                <a class="page-link" href="#">Older</a>
            </li>
            <li class="page-item disabled">
                <a class="page-link" href="#">Newer</a>
            </li> --}}

        </ul>


    </div>

    <!-- Side Content-->
    {{>home-partials/sidebar}}

</div>