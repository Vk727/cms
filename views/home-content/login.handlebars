<div class="container card card-login mx-auto mt-5">
    <div class="card-header">Login</div>

    <div class="card-body">
        <form action="/login" method="post">

            <!-- Email -->
            <div class="form-group">
                <label for="email">Email Address</label>
                <input name="email" id="email" class="form-control" type="email" placeholder="Enter email id">
            </div>

            <!-- Password -->
            <div class="form-group">
                <label for="password">Password</label>
                <input name="password" id="password" class="form-control" type="password"
                    placeholder="Enter the password">
            </div>

            <!-- Remember Password checkbox-->
            <div class="form-group">
                <div class="form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" type="checkbox"> Remember Password
                    </label>
                </div>
            </div>

            <!-- login/submit button -->
            <button type="submit" class="btn btn-primary btn-block">Login</button>

        </form>

        <!-- Other options -->
        <div class="text-center">
            <a class="d-block small mt-3" href="#">Register an Account</a>
            <a class="d-block small" href="#">Forgot Password</a>
            <a class="d-block small" href="#">Home</a>
        </div>

    </div>

</div>