<div class="alert alert-info">
    <p>
        <h5> Admin / Edit Posts</h5>
    </p>
</div>

<h1>Edit Posts</h1>

<form action="/admin-posts/edit/{{post.id}}?_method=PUT" method="post" enctype="multipart/form-data">

    <div class="form-group ">

        <label for="title">Title</label>

        {{!-- fetching data from admin-route-posts => /edit/:id => post --}}
        <input name="title" type="text" class="form-control" id="title" value="{{post.title}}">

    </div>

    <div class="form-group">
        <label for="file">File Upload</label>
        <input type="file" name="file" class="form-control">
    </div>

    <div class="form-group">
        <label for="category">Category</label>
        <select name="category" id="category" class="form-control">

            {{#select post.category}}

            {{#each categories}}

            <option value="{{id}}">{{name}}</option>

            {{/each}}

            {{/select}}
            
        </select>
    </div>

    <div class="form-group ">

        <label for="status">Status</label>

        <select name="status" type="text" class="form-control" id="status">


            {{!-- Check cmsmain.js set view engine section. the below handlebars expression is used to pass parameters to helpers-> handlerbars-helper.js to perform certain operations --}}
            {{#select post.status}}

            <option value="private">Private</option>
            <option value="public">Public</option>
            <option value="draft">Draft</option>

            {{/select}}

        </select>

    </div>

    <div class="form-check ">

        <label for="allowComments">
            <input name="allowComments" type="checkbox" {{#if post.allowComments}} checked="checked" {{/if}}
                class="form-check-input" id="allowComments">
            Allow Comments
        </label>

    </div>

    <div class="form-group ">

        <label for="body">Body</label>

        <textarea name="body" cols="30" rows="10" class="form-control" id="body">{{post.body}}</textarea>

    </div>


    <button type="submit" class="btn btn-primary">Update Post</button>


</form>